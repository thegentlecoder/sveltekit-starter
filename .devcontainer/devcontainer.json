{
	"name": "MastroGPT",
	"image": "ghcr.io/mastrogpt/agent41-starter:2506201530",
	"runArgs": [ "--network=host" ],
	"workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
	"remoteUser": "node",
	"containerEnv": {
        "OPS_BRANCH": "main"
    },
    "remoteEnv": {
        "OPS_BRANCH": "main"
    },
	"postCreateCommand": "ops -update ; npm install -D tailwindcss postcss @tailwindcss/postcss ; npx shadcn-svelte init",
	"customizations": {
		"vscode": {
			"extensions": [
				"pgant.antonio-ops-vscode-extension@1.3.2",
				"ms-python.python",
				"ms-vscode.test-adapter-converter",
				"pamaron.pytest-runner",
				"marp-team.marp-vscode",
				"ryuta46.multi-command",
				"george-alisson.html-preview-vscode",
				"mathematic.vscode-pdf",
				"svelte.svelte-vscode",
				"selemondev.vscode-shadcn-svelte"
			]
		}
	},
}
